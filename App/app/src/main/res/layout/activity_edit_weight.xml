<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/sbSteps"
        android:layout_width="239dp"
        android:layout_height="52dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edWeight"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/sbSteps"
        app:layout_constraintEnd_toEndOf="@+id/sbSteps"
        app:layout_constraintStart_toStartOf="@+id/sbSteps" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="@string/btnUpdate"
        app:layout_constraintEnd_toEndOf="@+id/sbSteps"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/sbSteps"
        app:layout_constraintTop_toBottomOf="@+id/sbSteps" />

</androidx.constraintlayout.widget.ConstraintLayout>